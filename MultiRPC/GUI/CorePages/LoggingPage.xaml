<local:PageWithIcon x:Class="MultiRPC.GUI.CorePages.LoggingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiRPC.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoggingPage"
      Background="Black">
    <ScrollViewer MaxHeight="{DynamicResource PagesMaxHeight}">
        <TextBlock Margin="6,6,0,0" Name="txtLogOutput" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
    </ScrollViewer>
</local:PageWithIcon>
