<Page x:Class="MultiRPC.GUI.Pages.ShareProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiRPC.GUI.Pages"
      mc:Ignorable="d" 
      MinHeight="200" MinWidth="400"
      Title="ShareProfilePage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox TextWrapping="Wrap" Name="tbShare" Height="NaN" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{DynamicResource AccentColour1SCBrush}" Margin="0,0,0,10"/>
        <Button Name="butImport" Click="ButImport_OnClick" Style="{DynamicResource ButtonGreen}" Grid.Row="1" HorizontalAlignment="Left"/>
        <Button Name="butExport" Click="ButExport_OnClick" Style="{DynamicResource ButtonGreen}" Grid.Row="1" HorizontalAlignment="Right"/>
    </Grid>
</Page>
